---
import ProviderAnimations from '@components/ProviderAnimations.astro'

import { siteConfig } from '@src/data/config'
import { ViewTransitions } from 'astro:transitions'

interface Props {
	title?: string
	description?: string
	image?: string
	articleDate?: string | undefined
	keywords?: string
	canonicalURL?: string | URL
}

const {
	title = siteConfig.title,
	description = siteConfig.description,
	keywords = siteConfig.keywords,
	canonicalURL = new URL(Astro.url.pathname, Astro.site) || 'https://stevemoya.me/',
	image = siteConfig.ogImage,
	articleDate
} = Astro.props
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<!--favicon-img-->
<link title="logo" rel="icon" type="image/png" href={siteConfig.favicon} />
<link rel="shortcut icon" href={siteConfig.favicon} type="image/x-icon" />

<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={siteConfig.author} />

<!-- Google / Search Engine Tags -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={image} />

{
	articleDate && (
		<>
			<meta property="article:author" content={siteConfig.author} />
			<meta property="article:published_time" content={articleDate} />
		</>
	)
}

<!-- RSS auto-discovery -->
<link rel="alternate" type="application/rss+xml" title={siteConfig.title} href="/rss.xml" />

<meta name="robots" content="index, nosnippet" />
<meta property="og:type" content="website" />
<ProviderAnimations />


