---
import { Picture } from 'astro:assets'

import Particles from './Particles.astro'
import TextRotate from './TextRotate.astro'

import SteveImg from '/src/assets/img/Steve-Moya.webp'
import SocialLinks from '@components/SocialLinks.astro'
import OptimizatedPicture from '@components/OptimizatedPicture.astro'
---

<!--Header-->
<section
	class="relative block h-screen w-screen animate-[scale_1.5s_ease] overflow-hidden bg-[#171717]"
>
	<Particles />
	<!--Social Media Links-->
	<SocialLinks />
	<!--Social Media Links end-->
	<div
		class="absolute z-[1] float-left flex h-screen w-full flex-col items-center justify-center text-[50px] font-normal tracking-[1px]"
	>
		<div class="z-[2] h-auto w-auto text-center sm:pr-[70px] lg:pr-[700px]">
			<h1 class="z-[2] text-[65px] font-bold">
				<span class="font-extrabold text-[#b11141] transition-all duration-300 ease-in-out"
					>Steve
				</span>Moya
			</h1>
			<div class="z-[2] pt-5 text-[32px] font-bold text-[rgb(255,255,255,0.8)]">
				Soy
				<TextRotate
					period="1200"
					color="#b11141"
					text={[' Diseñador,', ' Fotógrafo'," y", ' Marketer.']}
				/>
			</div>
		</div>
	</div>
	<!--header image-->
	<div class="float-right h-auto w-full bg-cover bg-center object-cover object-right">
		<OptimizatedPicture
			class="float-right h-screen w-full object-cover"
			src={SteveImg}
			loading="eager"
			alt="Steve-moya"
		/>
	</div>
	<!--header image end-->
</section>
<!--Header End-->
