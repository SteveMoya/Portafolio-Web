---
import Card from '@components/ui/Card.astro'

import marketingFoto from '/src/assets/img/marketing.webp'
import fotografiaFoto from '/src/assets/img/fotografia.webp'
import webFoto from '/src/assets/img/web.webp'
import disenoFoto from '/src/assets/img/diseño.webp'

const portafolios = [
	{
		title: 'Marketing',
		img: marketingFoto,
		description: 'Aqui todas mis estrategias de marketing y proyectos realizados',
		href: '/blog/category/marketing/1'
	},
	{
		title: 'Fotografía',
		img: fotografiaFoto,
		description: 'Puedes darle un vistazo pero todavia estoy Trabajando en ello',
		href: '/portafolio/fotografia'
	},
	{
		title: 'Web',
		img: webFoto,
		description: 'Puedes darle un vistazo pero todavia estoy Trabajando en ello',
		href: '/portafolio/webs'
	},
	{
		title: 'Diseño Gráfico',
		img: disenoFoto,
		description: 'Todavia Trabajando en ello',
		href: '/portafolio/diseno'
	}
]
---

<section class="flex h-auto w-full flex-col justify-center overflow-hidden">
	{portafolios.map((portafolio) => <Card type="portafolio" {...portafolio} />)}
</section>
