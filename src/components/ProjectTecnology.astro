---
import { Icon } from 'astro-icon/components'

interface Props {
	tecnology: string
	size?: unknown
}
const { tecnology, size } = Astro.props

const tecnologyMap: Record<string, { color: string; icon: string }> = {
	python: { color: 'bg-yellow-500', icon: 'mdi:language-python' },
	javascript: { color: 'bg-yellow-500', icon: 'mdi:language-javascript' },
	typescript: { color: 'bg-blue-500', icon: 'mdi:language-typescript' },
	html: { color: 'bg-red-500', icon: 'mdi:language-html5' },
	css: { color: 'bg-blue-500', icon: 'mdi:language-css3' },
	tailwindcss: { color: 'bg-blue-500', icon: 'mdi:tailwindcss' },
	react: { color: 'bg-blue-500', icon: 'mdi:react' },
	vue: { color: 'bg-green-500', icon: 'mdi:vuejs' },
	angular: { color: 'bg-red-500', icon: 'mdi:angular' },
	dockerfile: { color: 'bg-blue-500', icon: 'mdi:docker' },
	astro: { color: 'bg-orange-600', icon: 'logos:astro-icon' },
	mdx: { color: 'bg-amber-400', icon: 'logos:mdx' },
	markdown: { color: 'bg-neutral-200', icon: 'mdi:language-markdown' },
	shell: { color: 'bg-blue-500', icon: 'mdi:powershell' }
}

const tecnologyName = tecnology.toLowerCase()

const { color, icon } = tecnologyMap[tecnologyName] || {
	color: 'gray-500',
	icon: 'mdi:alert-circle'
}
---

<li class:list={['rounded-full p-2 text-white', color]}>
	<span>
		<Icon class="inline-block" name={icon} />
		{tecnology}
	</span>
</li>
