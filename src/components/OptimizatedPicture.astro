---
import { Picture } from 'astro:assets'

interface Props {
	src: string
	alt: string
	widths?: number[]
	sizes?: string
	formats?: string[]
	fallbackFormat?: string
	class?: string
	loading?: 'lazy' | 'eager'
	quality?: 'low' | number
}

const {
	src,
	alt,
	formats = ['avif', 'webp', ],
	loading = 'lazy',
	class: className,
	quality
} = Astro.props
---

<Picture
	src={src}
	alt={alt}
	formats={formats}
	inferSize
	loading={loading}
	class={className}
	quality={quality}
/>
