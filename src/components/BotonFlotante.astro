---
import { Icon } from 'astro-icon/components'

interface Props {
	icon: string
	link: string
	text: string
}
const { icon, link, text } = Astro.props
---

<a
	href={link}
	class='flex items-center justify-center w-12 h-12 rounded-full bg-[#25d366] shadow-lg hover:shadow-xl transition-all duration-300 ease-in-out fixed bottom-4 right-4 hover:bg-[#128c7e] hover:-translate-y-4'
	aria-label={text}
	title={text}
	target="_blank"
>
	<Icon name={icon} class="h-6 w-6 text-white" />
</a>
